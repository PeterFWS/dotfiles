{
    "coc.preferences.jumpCommand": "tab drop",
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["-background-index", "-j=4"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "h", "hpp", "objc", "objcpp"]
        },
    },
    "python.linting.pylintArgs": [
        "--generated-members=cv2.*",
        "--extension-pkg-whitelist=cv2",
        "--disable=missing-class-docstring",
        "--disable=missing-function-docstring",
        "--disable=invalid-name"
    ],
    "rust-analyzer.cargo-watch.command": "clippy",
    "rust-analyzer.cargo-watch.arguments": ["--all"],
    "diagnostic.errorSign" : "üçé",
    "diagnostic.warningSign" : "üçå",
    "diagnostic.infoSign" : "ü•í",
    "diagnostic.hintSign" : "üíô"
}
