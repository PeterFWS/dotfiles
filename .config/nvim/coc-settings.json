{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["-background-index", "-j=4"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "h", "hpp", "objc", "objcpp"]
        },
    },
    "python.linting.pylintArgs": ["--extension-pkg-whitelist=cv2", "--variable-rgx=^[a-z][a-z0-9]*((_[a-z0-9]+)*)?$", "--argument-rgx=^[a-z][a-z0-9]*((_[a-z0-9]+)*)?$"],
    "rust-analyzer.enableCargoWatchOnStartup": "enabled",
    "rust-analyzer.cargo-watch.command": "clippy",
    "rust-analyzer.cargo-watch.arguments": "--all",
    "diagnostic.errorSign" : "‚ùå",
    "diagnostic.warningSign" : "üêº",
    "diagnostic.infoSign" : "üê•",
    "diagnostic.hintSign" : "‚ùó"
}
